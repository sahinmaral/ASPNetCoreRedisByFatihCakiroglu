@using RedisExchangeAPI.Web.Controllers
@model Dictionary<string,string>

@{
    ViewData["Title"] = "Index";
}

<form method="post"
      asp-action="@nameof(HashTypeController.AddAsync).Replace("Async","")"
      asp-controller="@nameof(HashTypeController).Replace("Controller","")"
      enctype="application/x-www-form-urlencoded">

    <label>Key</label>
    <input class="form-control" type="text" name="key" />

    <label>Value</label>
    <input class="form-control" type="text" name="value" />

    <button type="submit" class="btn btn-success">Kaydet</button>

</form>

<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Key</th>
            <th scope="col">Value</th>
            <th scope="col">Delete Item</th>
        </tr>
    </thead>
    <tbody>
        @foreach (string key in Model.Keys)
        {
            <tr>
                <th scope="row">@key</th>
                <th scope="row">@Model.GetValueOrDefault(key)</th>
                <th scope="row">
                    <a class="btn btn-danger"
                   asp-action="@nameof(HashTypeController.DeleteItemAsync).Replace("Async","")"
                   asp-route-key="@key"
                   asp-controller="@nameof(HashTypeController).Replace("Controller","")">Delete Item</a>
                </th>
            </tr>
        }
    </tbody>
</table>

